{
    "openapi": "3.0.1",
    "info": {
        "title": "Fundoo Notes",
        "description": "This is a replica of Google Keep. Users can register and login, request a forgotten password, and reset their password using shared credentials. Users can also perform CRUD operations on notes."
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": "Operations related to user management"
        },
        {
            "name": "Notes",
            "description": "Operations related to notes management"
        }
    ],
    "paths": {
        "/users/register": {
            "post": {
                "tags": ["User"],
                "description": "Register a new user",
                "requestBody": {
                    "description": "User registration details",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "User created successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": ["User"],
                "description": "User login",
                "requestBody": {
                    "description": "User login details",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successfully logged in",
                        "content": {}
                    },
                    "404": {
                        "description": "Email or password doesn't match",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                }
            }
        },
        "/users/forgot-password": {
            "post": {
                "tags": ["User"],
                "summary": "Forget password",
                "requestBody": {
                    "description": "Forget Password",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ForgetPassword"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "reset password link sent sucessfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "could not send mail",
                        "content": {}
                    }
                },
                "x-codegen-request-body-name": "Forget Password"
            }
        },
        "/users/reset-password/{token}": {
            "put": {
                "tags": [
                    "User"
                ],
                "summary": "reset password for User",
                "requestBody": {
                    "description": "new password",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ResetPassword"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "reset Password is sucessfully done",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ],
                "x-codegen-request-body-name": "new password"
            }
        },

        "/notes/get-all/{userId}": {
            "get": {
                "tags": ["Notes"],
                "summary": "Get all notes",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Notes fetched successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
            
        },

        "/notes/create": {
                "post":{
                    "tags": ["Notes"],
                "summary": "Create a new note",
                "requestBody": {
                    "description": "Details of the note to be created",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Note"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Note created successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
                }
        },


        "/notes/get/{noteId}": {
            "get": {
                "tags": ["Notes"],
                "summary": "Get a single note by its ID",
                "parameters": [
                    {
                        "name": "noteId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note fetched successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/notes/update/{noteId}": {
            "update": {
                "tags": ["Notes"],
                "summary": "Update a note",
                "parameters": [
                    {
                        "name": "noteId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Updated note details",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Note"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Note updated successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/notes/delete/{noteId}": {
            "delete": {
                "tags": ["Notes"],
                "summary": "Delete a note",
                "parameters": [
                    {
                        "name": "noteId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note deleted successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/notes/archive/{noteId}": {
            "post": {
                "tags": ["Notes"],
                "summary": "Archive a note",
                "parameters": [
                    {
                        "name": "_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note archived successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/notes/trash/{noteId}": {
            "post": {
                "tags": ["Notes"],
                "summary": "Send a note to trash",
                "parameters": [
                    {
                        "name": "_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Note sent to trash successfully",
                        "content": {}
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {}
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {}
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": ["email", "password"]
            },
            "Login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": ["email", "password"]
            },
          
            "Note": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "isArchived": {
                        "type": "boolean"
                    },
                    "isTrashed": {
                        "type": "boolean"
                    }
                },
                "required": ["title", "content"]
            }
        },
        "securitySchemes": {
            "JWT": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
    
}
